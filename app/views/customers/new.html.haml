= render "shared/header"
.container
  .main-nego
    .main-nego__container.customer-back
      %h2
        取引先の登録
      = form_with model: @customer, local: true do |f|

        .field
          = f.label :会社名
          %span.require 必須
          %br/
          = f.text_field :name, class: "require-check-customer"

        .field
          = f.label :カテゴリ
          %span.require 必須
          %br/
          = f.collection_select :category_id, Category.all, :id, :name, {prompt: "--"}

        .field
          = f.label :営業担当
          %span.require 必須
          = f.text_field :person, class: "require-check-person"

        .field
          = f.label :役職
          = f.select :position, ["担当", "主任級", "営業所長", "エリア長", "社長"], {prompt: "--"}

        .field
          = f.label :電話番号
          = f.text_field :tel, placeholder: "ハイフン無し", class: "telephone"

        .field
          = f.label :営業携帯電話
          = f.text_field :mobile, placeholder: "ハイフン無し", class: "mobile_phone"

        .field
          = f.label :FAX
          = f.text_field :fax, placeholder: "ハイフン無し", class: "telephone"

        .field
          = f.label :メールアドレス
          = f.text_field :email, class: "email"

        .field
          = f.label :取扱商材
          = f.text_field :product

        .field
          = f.label :備考欄
          = f.text_area :remarks
        
        = f.submit '登録', class: "submit-btn submit-cstm"