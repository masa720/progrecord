- if cnt_comment.user_id == current_user.id
  .comment-rcontainer
    .comment-rcontainer__head
      .comment-rcontainer__head__name
        %i.fas.fa-portrait
        = cnt_comment.user.last_name
        = cnt_comment.user.first_name
      .comment-rcontainer__head__btn
        = link_to negotiation_continuation_cnt_comment_path(@negotiation.id, @continuation.id, cnt_comment.id), method: :delete, class: "confirm-btn" do
          %i.fas.fa-times-circle.comment-delete-btn
    .comment-rcontainer__box
      .comment-rcontainer__box__body
        = safe_join(cnt_comment.body.split("\n"), tag(:br))
      .comment-rcontainer__box__body
        %i.far.fa-clock
        = cnt_comment.updated_at.strftime("%Y年 %-m月 %-d日 %H:%M")
- else
  .comment-lcontainer
    .comment-rcontainer__head
      .comment-rcontainer__head__name
        %i.fas.fa-portrait
        = cnt_comment.user.last_name
        = cnt_comment.user.first_name
    .comment-lcontainer__box
      .comment-lcontainer__box__body
        = safe_join(cnt_comment.body.split("\n"), tag(:br))
      .comment-lcontainer__box__body
        %i.far.fa-clock
        = cnt_comment.updated_at.strftime("%Y年 %-m月 %-d日 %H:%M")